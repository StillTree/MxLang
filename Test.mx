let A: 2x2 = [2 1][1 3]
let B: 2x2 = [1 0][0 1]
let v = <<1 0>>
let sum = 0
let i = 1

while i <= 4 {
	v = A * v

    let mag2 = v[1]*v[1] + v[2]*v[2]
    sum = sum + mag2

    let n = mag2 ^ 0.5
    if n > 0 {
        v[1] = v[1] / n
        v[2] = v[2] / n
    }

	B = B * A

    i = i + 1
}

display(v)
display(B)
display(sum)
